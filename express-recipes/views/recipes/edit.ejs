<%- include('../partials/header.ejs') %> 

<main>
<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
	<div>
		<label for="name">Name</label>
		<input type="text" name="name" id="name" value="<%= recipe.name %>"/>
	</div>
	<div>
		<label for="category">Category</label>
		<select name="category">
            <option value="<%= recipe.category %>" selected disabled hidden><%= recipe.category %></option>
			<option value="Breakfast">Breakfast</option>
			<option value="Lunch">Lunch</option>
			<option value="Dinner">Dinner</option>
		</select>
	</div>
    <div>
		<label for="description">Description</label>
		<input type="text" name="description" id="description" value="<%= recipe.description %>"/>
	</div>
	<div>
		<label for="instructions">Instructions</label>
		<textarea name="instructions" id="instructions"><%= recipe.instructions %></textarea>
	</div>
	<div>
		<label for="ingredients">Ingredients</label>
		<textarea name="ingredients" id="ingredients"><%= recipe.ingredients %></textarea>
	</div>
    <button type="submit">Edit Recipe</button>
</form>
</main>

<%- include('../partials/footer.ejs') %> 